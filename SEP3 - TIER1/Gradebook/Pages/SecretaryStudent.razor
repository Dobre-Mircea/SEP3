@page "/SecretaryStudent"
@using BlazorDateRangePicker

<head>
    <link rel="stylesheet" href="css/overallTheme.css">
</head>

<div class="blue-border container">
    <br>
    <div class="row">
        <div class="col">
            <h3 class="center-horiz">Create Student</h3>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-4 center-horiz form-group">
            <label for="fname">First name:</label>
            <input type="text" class="form-control" id="fname" placeholder="Adam">
        </div>
        <div class="col-4 center-horiz form-group">
            <label for="lname">Last name:</label>
            <input type="text" class="form-control" id="lname" placeholder="Adam">
        </div>
        <div class="col-4 center-horiz form-group">
            <label for="Address">Address:</label>
            <input type="text" class="form-control" id="Address" placeholder="Raedersgade 8, 1tv, Horsens 8700">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-4 center-horiz form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" placeholder="********">
        </div>
        <div class="col-4 center-horiz form-group">
            <label for="phoneno">Phone no.:</label>
            <input type="text" class="form-control" id="phoneno" placeholder="12 34 56 78">
        </div>
        <div class="col-4 center-horiz form-group">
            <label>Birthday:</label>
            <DateRangePicker SingleDatePicker="true" MinDate="DateTime.Now.AddYears(-50)" MaxDate="DateTime.Now.AddYears(-5)"/>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col center-horiz">
            <button class="btn btn-default btn-success">Create Student</button>
        </div>
    </div>
    <br>
</div>

<div class="container blue-border" style="margin-top: 3em">
    <br>
    <div class="row">
        <div class="col">
            <h3 class="center-horiz">Edit Student</h3>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col center-horiz">
            <label for="selectStudent">Select Student:</label>
            <select id="selectStudent"></select>
            <button class="btn btn-default btn-danger" style="margin-left: 1em">Delete Student</button>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-4 center-horiz form-group">
            <label for="fname2">First name:</label>
            <input type="text" class="form-control" id="fname2" placeholder="Adam">
        </div>
        <div class="col-4 center-horiz form-group">
            <label for="lname2">Last name:</label>
            <input type="text" class="form-control" id="lname2" placeholder="Adam">
        </div>
        <div class="col-4 center-horiz form-group">
            <label for="Address2">Address:</label>
            <input type="text" class="form-control" id="Address2" placeholder="Raedersgade 8, 1tv, Horsens 8700">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-4 center-horiz form-group">
            <label for="password2">Password:</label>
            <input type="password" class="form-control" id="password2" placeholder="********">
        </div>
        <div class="col-4 center-horiz form-group">
            <label for="phoneno2">Phone no.:</label>
            <input type="text" class="form-control" id="phoneno2" placeholder="12 34 56 78">
        </div>
        <div class="col-4 center-horiz form-group">
            <label>Birthday:</label>
            <DateRangePicker SingleDatePicker="true" MinDate="DateTime.Now.AddYears(-50)" MaxDate="DateTime.Now.AddYears(-5)"/>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col center-horiz">
            <button class="btn btn-default btn-primary">Edit Student</button>
        </div>
    </div>
    <br>
</div>

